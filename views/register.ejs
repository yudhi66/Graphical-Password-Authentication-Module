<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Register</h1>
 
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

        
          <form action="/register" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="options">Choose Options for graphical password recommended minimum 5 remember the order</label>
              <div id="optionsContainer">
                <div class="option-item">
                  <label class="option-number">Option 1</label>
                  <select class="form-control mb-2" name="options[]">
                    <option value="cat">Cat</option>
                    <option value="dog">Dog</option>
                  </select>
                </div>
              </div>
              <button type="button" class="btn btn-secondary" id="addOption">Add Option</button>
            </div>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>

        </div>
      </div>
    </div>
 

  </div>
</div>

<script>
  document.getElementById('addOption').addEventListener('click', function() {
    const container = document.getElementById('optionsContainer');
    const optionCount = container.getElementsByClassName('option-item').length + 1;

    const optionItem = document.createElement('div');
    optionItem.className = 'option-item';

    const label = document.createElement('label');
    label.className = 'option-number';
    label.textContent = 'Option ' + optionCount;

    const newSelect = document.createElement('select');
    newSelect.className = 'form-control mb-2';
    newSelect.name = 'options[]';
    newSelect.innerHTML = `
      <option value="cat">Cat</option>
      <option value="dog">Dog</option>
    `;

    optionItem.appendChild(label);
    optionItem.appendChild(newSelect);
    container.appendChild(optionItem);
  });
</script>
